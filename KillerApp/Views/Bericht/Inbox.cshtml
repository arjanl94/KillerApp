@model List<KillerApp.Models.Bericht>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inbox</h2>
<table class="table">
    <tr>
        <th></th>
        <th>
            Titel
        </th>
        <th>
            Verzender
        </th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Bekijk", "Details", new {berichtnr = item.Berichtnr}) |
                @Html.ActionLink("Verwijder", "VerwijderBericht", new {berichtnr = item.Berichtnr}, new {onclick = "return confirm('Weet je zeker dat je dit bericht wilt verwijderen?');"})
            </td>
            <td>
                @Html.Encode(item.Titel)
            </td>
            <td>
                @if (item.Verzender.Naam == "null")
                {
                    @Html.Encode(item.Verzender.Gebruikersnaam)
                }
                else
                {
                    @Html.Encode(item.Verzender.Naam)
                }
            </td>
        </tr>
    }
</table>

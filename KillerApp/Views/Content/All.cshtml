@using System.Diagnostics.Eventing.Reader
@model List<KillerApp.Models.Content>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alle content</h2>
<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            Naam
        </th>
        <th>
            Genre
        </th>
        <th>
            Duur
        </th>
        <th>
            Uploader
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.Video == true)
                {
                    @Html.ActionLink("Bekijk", "View", new {contentnr = item.Nr})
                }
                else
                {
                    @Html.ActionLink("Bekijk", "View_m", new {contentnr = item.Nr})
                }
            </td>
            <td>
                @Html.Raw(item.Naam)
            </td>
            <td>
                @Html.Encode(item.Genre)
            </td>
            <td>
                @Html.Encode(item.Duur)
            </td>
            <td>
                @if (item.Uploader.Naam == "null")
                {
                    @Html.Encode(item.Uploader.Gebruikersnaam)
                }
                else
                {
                    @Html.Encode(item.Uploader.Naam)
                }
            </td>
        </tr>
    }
</table>


